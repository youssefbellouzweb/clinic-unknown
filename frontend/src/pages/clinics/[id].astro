---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/layout/Navbar";
import Footer from "../../components/layout/Footer";

const { id } = Astro.params;
---

<Layout title="Clinic Details - ClinicHub">
  <div class="min-h-screen flex flex-col">
    <Navbar client:load />

    <main class="flex-1 py-12">
      <div class="container-custom">
        <div id="clinicDetails">
          <div class="text-center py-12">
            <p class="text-gray-500">Loading clinic details...</p>
          </div>
        </div>
      </div>
    </main>

    <Footer client:load />
  </div>
</Layout>

<script define:vars={{ clinicId: id }}>
  import axios from "axios";

  async function loadClinicDetails() {
    try {
      const response = await axios.get(
        `http://localhost:5000/api/clinics/${clinicId}`,
      );
      const clinic = response.data.clinic;
      renderClinicDetails(clinic);
    } catch (error) {
      console.error("Failed to load clinic:", error);
      const container = document.getElementById("clinicDetails");
      if (container) {
        container.innerHTML =
          '<div class="text-center py-12"><p class="text-red-600">Failed to load clinic details.</p></div>';
      }
    }
  }

  function renderClinicDetails(clinic: any) {
    const container = document.getElementById("clinicDetails");
    if (!container) return;

    container.innerHTML = `
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        <div class="h-64 bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
          <div class="text-white text-8xl font-bold">${clinic.name.charAt(0)}</div>
        </div>
        
        <div class="p-8">
          <h1 class="text-4xl font-bold mb-4">${clinic.name}</h1>
          
          <div class="grid md:grid-cols-2 gap-6 mb-8">
            ${
              clinic.specialty
                ? `
              <div class="flex items-start gap-3">
                <div class="bg-blue-100 p-3 rounded-lg">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Specialty</p>
                  <p class="font-semibold">${clinic.specialty}</p>
                </div>
              </div>
            `
                : ""
            }
            
            ${
              clinic.city
                ? `
              <div class="flex items-start gap-3">
                <div class="bg-green-100 p-3 rounded-lg">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Location</p>
                  <p class="font-semibold">${clinic.city}</p>
                </div>
              </div>
            `
                : ""
            }
            
            ${
              clinic.phone
                ? `
              <div class="flex items-start gap-3">
                <div class="bg-purple-100 p-3 rounded-lg">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Phone</p>
                  <p class="font-semibold">${clinic.phone}</p>
                </div>
              </div>
            `
                : ""
            }
            
            ${
              clinic.email
                ? `
              <div class="flex items-start gap-3">
                <div class="bg-orange-100 p-3 rounded-lg">
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Email</p>
                  <p class="font-semibold">${clinic.email}</p>
                </div>
              </div>
            `
                : ""
            }
          </div>
          
          ${
            clinic.description
              ? `
            <div class="mb-8">
              <h2 class="text-2xl font-semibold mb-3">About</h2>
              <p class="text-gray-700 leading-relaxed">${clinic.description}</p>
            </div>
          `
              : ""
          }
          
          ${
            clinic.services
              ? `
            <div class="mb-8">
              <h2 class="text-2xl font-semibold mb-3">Services</h2>
              <p class="text-gray-700">${clinic.services}</p>
            </div>
          `
              : ""
          }
          
          ${
            clinic.address
              ? `
            <div class="mb-8">
              <h2 class="text-2xl font-semibold mb-3">Address</h2>
              <p class="text-gray-700">${clinic.address}</p>
            </div>
          `
              : ""
          }
          
          <div class="flex gap-4">
            <a href="/login" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
              Request Appointment
            </a>
            <a href="/clinics" class="border-2 border-gray-300 text-gray-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
              Back to Clinics
            </a>
          </div>
        </div>
      </div>
    `;
  }

  loadClinicDetails();
</script>
