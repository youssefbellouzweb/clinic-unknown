---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/layout/Navbar";
import Footer from "../../components/layout/Footer";
---

<Layout title="Browse Clinics - ClinicHub">
    <div class="min-h-screen flex flex-col">
        <Navbar client:load />

        <main class="flex-1 py-12">
            <div class="container-custom">
                <div class="mb-8">
                    <h1 class="text-4xl font-bold mb-4">Find a Clinic</h1>
                    <p class="text-xl text-gray-600">
                        Browse healthcare providers in your area
                    </p>
                </div>

                <!-- Search Filters -->
                <div class="bg-white rounded-xl shadow-md p-6 mb-8">
                    <div class="grid md:grid-cols-3 gap-4">
                        <div>
                            <label
                                for="searchQuery"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Search
                            </label>
                            <input
                                type="text"
                                id="searchQuery"
                                placeholder="Search clinics..."
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            />
                        </div>
                        <div>
                            <label
                                for="cityFilter"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                City
                            </label>
                            <input
                                type="text"
                                id="cityFilter"
                                placeholder="Enter city"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            />
                        </div>
                        <div>
                            <label
                                for="specialtyFilter"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Specialty
                            </label>
                            <select
                                id="specialtyFilter"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            >
                                <option value="">All Specialties</option>
                                <option value="General Practice"
                                    >General Practice</option
                                >
                                <option value="Dentistry">Dentistry</option>
                                <option value="Pediatrics">Pediatrics</option>
                                <option value="Cardiology">Cardiology</option>
                                <option value="Dermatology">Dermatology</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Clinics Grid -->
                <div
                    id="clinicsGrid"
                    class="grid md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    <!-- Loading Skeletons -->
                    <div class="col-span-full" id="loading-state">
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div
                                class="bg-white rounded-xl shadow-md overflow-hidden animate-pulse"
                            >
                                <div class="h-48 bg-gray-200"></div>
                                <div class="p-6 space-y-3">
                                    <div class="h-6 bg-gray-200 rounded w-3/4">
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-1/2">
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-2/3">
                                    </div>
                                    <div
                                        class="h-4 bg-gray-200 rounded w-1/3 mt-4"
                                    >
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-white rounded-xl shadow-md overflow-hidden animate-pulse"
                            >
                                <div class="h-48 bg-gray-200"></div>
                                <div class="p-6 space-y-3">
                                    <div class="h-6 bg-gray-200 rounded w-3/4">
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-1/2">
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-2/3">
                                    </div>
                                    <div
                                        class="h-4 bg-gray-200 rounded w-1/3 mt-4"
                                    >
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-white rounded-xl shadow-md overflow-hidden animate-pulse"
                            >
                                <div class="h-48 bg-gray-200"></div>
                                <div class="p-6 space-y-3">
                                    <div class="h-6 bg-gray-200 rounded w-3/4">
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-1/2">
                                    </div>
                                    <div class="h-4 bg-gray-200 rounded w-2/3">
                                    </div>
                                    <div
                                        class="h-4 bg-gray-200 rounded w-1/3 mt-4"
                                    >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Error State (hidden by default) -->
                <div id="error-state" class="hidden col-span-full">
                    <div
                        class="text-center py-12 bg-white rounded-xl shadow-md"
                    >
                        <div class="text-red-500 mb-4">
                            <svg
                                class="w-16 h-16 mx-auto"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                            Failed to load clinics
                        </h3>
                        <p class="text-gray-600 mb-6">
                            There was an error loading the clinics. Please try
                            again.
                        </p>
                        <button
                            id="retry-button"
                            class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-all shadow-md hover:shadow-lg font-medium"
                        >
                            Retry
                        </button>
                    </div>
                </div>
            </div>
        </main>

        <Footer client:load />
    </div>
</Layout>

<script>
    import axios from "axios";
    import { MapPin, Stethoscope, Phone } from "lucide-react";

    let clinics: any[] = [];

    async function loadClinics() {
        const loadingState = document.getElementById("loading-state");
        const errorState = document.getElementById("error-state");
        const grid = document.getElementById("clinicsGrid");

        // Show loading state
        if (loadingState) loadingState.classList.remove("hidden");
        if (errorState) errorState.classList.add("hidden");

        try {
            const searchQuery =
                (document.getElementById("searchQuery") as HTMLInputElement)
                    ?.value || "";
            const city =
                (document.getElementById("cityFilter") as HTMLInputElement)
                    ?.value || "";
            const specialty =
                (
                    document.getElementById(
                        "specialtyFilter",
                    ) as HTMLSelectElement
                )?.value || "";

            const params = new URLSearchParams();
            if (searchQuery) params.append("search", searchQuery);
            if (city) params.append("city", city);
            if (specialty) params.append("specialty", specialty);

            const response = await axios.get(
                `http://localhost:3000/api/clinics?${params.toString()}`,
            );
            clinics = response.data.clinics;

            // Hide loading state
            if (loadingState) loadingState.classList.add("hidden");

            renderClinics();
        } catch (error) {
            console.error("Failed to load clinics:", error);

            // Hide loading state and show error state
            if (loadingState) loadingState.classList.add("hidden");
            if (errorState) errorState.classList.remove("hidden");
        }
    }

    function renderClinics() {
        const grid = document.getElementById("clinicsGrid");
        if (!grid) return;

        if (clinics.length === 0) {
            grid.innerHTML =
                '<div class="col-span-full text-center py-12 bg-white rounded-xl shadow-md"><div class="text-gray-400 mb-4"><svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg></div><h3 class="text-xl font-semibold text-gray-900 mb-2">No clinics found</h3><p class="text-gray-600">Try adjusting your search filters</p></div>';
            return;
        }

        grid.innerHTML = clinics
            .map(
                (clinic) => `
      <a href="/clinics/${clinic.id}" class="block bg-white rounded-xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden group hover:-translate-y-1">
        <div class="h-48 bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center relative overflow-hidden">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
          <div class="text-white text-6xl font-bold relative z-10 transform group-hover:scale-110 transition-transform duration-300">${clinic.name.charAt(0)}</div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-3 text-gray-900 group-hover:text-blue-600 transition-colors">${clinic.name}</h3>
          ${
              clinic.specialty
                  ? `
            <div class="flex items-center gap-2 text-gray-600 mb-2">
              <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <span class="text-sm font-medium">${clinic.specialty}</span>
            </div>
          `
                  : ""
          }
          ${
              clinic.city
                  ? `
            <div class="flex items-center gap-2 text-gray-600 mb-2">
              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-sm">${clinic.city}</span>
            </div>
          `
                  : ""
          }
          ${
              clinic.description
                  ? `
            <p class="text-gray-600 text-sm mt-3 line-clamp-2">${clinic.description}</p>
          `
                  : ""
          }
          <div class="mt-4 flex items-center text-blue-600 font-semibold text-sm group-hover:gap-2 transition-all">
            <span>View Details</span>
            <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </div>
      </a>
    `,
            )
            .join("");
    }

    // Load clinics on page load
    loadClinics();

    // Add event listeners for filters
    document
        .getElementById("searchQuery")
        ?.addEventListener("input", loadClinics);
    document
        .getElementById("cityFilter")
        ?.addEventListener("input", loadClinics);
    document
        .getElementById("specialtyFilter")
        ?.addEventListener("change", loadClinics);

    // Add retry button event listener
    document
        .getElementById("retry-button")
        ?.addEventListener("click", loadClinics);
</script>
