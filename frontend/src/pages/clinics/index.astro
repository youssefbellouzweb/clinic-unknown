---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/layout/Navbar";
import Footer from "../../components/layout/Footer";
---

<Layout title="Browse Clinics - ClinicHub">
    <div class="min-h-screen flex flex-col">
        <Navbar client:load />

        <main class="flex-1 py-12">
            <div class="container-custom">
                <div class="mb-8">
                    <h1 class="text-4xl font-bold mb-4">Find a Clinic</h1>
                    <p class="text-xl text-gray-600">
                        Browse healthcare providers in your area
                    </p>
                </div>

                <!-- Search Filters -->
                <div class="bg-white rounded-xl shadow-md p-6 mb-8">
                    <div class="grid md:grid-cols-3 gap-4">
                        <div>
                            <label
                                for="searchQuery"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Search
                            </label>
                            <input
                                type="text"
                                id="searchQuery"
                                placeholder="Search clinics..."
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            />
                        </div>
                        <div>
                            <label
                                for="cityFilter"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                City
                            </label>
                            <input
                                type="text"
                                id="cityFilter"
                                placeholder="Enter city"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            />
                        </div>
                        <div>
                            <label
                                for="specialtyFilter"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Specialty
                            </label>
                            <select
                                id="specialtyFilter"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                            >
                                <option value="">All Specialties</option>
                                <option value="General Practice"
                                    >General Practice</option
                                >
                                <option value="Dentistry">Dentistry</option>
                                <option value="Pediatrics">Pediatrics</option>
                                <option value="Cardiology">Cardiology</option>
                                <option value="Dermatology">Dermatology</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Clinics Grid -->
                <div
                    id="clinicsGrid"
                    class="grid md:grid-cols-2 lg:grid-cols-3 gap-6"
                >
                    <div class="text-center py-12 col-span-full">
                        <p class="text-gray-500">Loading clinics...</p>
                    </div>
                </div>
            </div>
        </main>

        <Footer client:load />
    </div>
</Layout>

<script>
    import axios from "axios";
    import { MapPin, Stethoscope, Phone } from "lucide-react";

    let clinics: any[] = [];

    async function loadClinics() {
        try {
            const searchQuery =
                (document.getElementById("searchQuery") as HTMLInputElement)
                    ?.value || "";
            const city =
                (document.getElementById("cityFilter") as HTMLInputElement)
                    ?.value || "";
            const specialty =
                (
                    document.getElementById(
                        "specialtyFilter",
                    ) as HTMLSelectElement
                )?.value || "";

            const params = new URLSearchParams();
            if (searchQuery) params.append("search", searchQuery);
            if (city) params.append("city", city);
            if (specialty) params.append("specialty", specialty);

            const response = await axios.get(
                `http://localhost:5000/api/clinics?${params.toString()}`,
            );
            clinics = response.data.clinics;
            renderClinics();
        } catch (error) {
            console.error("Failed to load clinics:", error);
            const grid = document.getElementById("clinicsGrid");
            if (grid) {
                grid.innerHTML =
                    '<div class="col-span-full text-center py-12"><p class="text-red-600">Failed to load clinics. Please try again.</p></div>';
            }
        }
    }

    function renderClinics() {
        const grid = document.getElementById("clinicsGrid");
        if (!grid) return;

        if (clinics.length === 0) {
            grid.innerHTML =
                '<div class="col-span-full text-center py-12"><p class="text-gray-500">No clinics found.</p></div>';
            return;
        }

        grid.innerHTML = clinics
            .map(
                (clinic) => `
      <a href="/clinics/${clinic.id}" class="block bg-white rounded-xl shadow-md hover:shadow-xl transition-all overflow-hidden">
        <div class="h-48 bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
          <div class="text-white text-6xl font-bold">${clinic.name.charAt(0)}</div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">${clinic.name}</h3>
          ${
              clinic.specialty
                  ? `
            <div class="flex items-center gap-2 text-gray-600 mb-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <span class="text-sm">${clinic.specialty}</span>
            </div>
          `
                  : ""
          }
          ${
              clinic.city
                  ? `
            <div class="flex items-center gap-2 text-gray-600 mb-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-sm">${clinic.city}</span>
            </div>
          `
                  : ""
          }
          ${
              clinic.description
                  ? `
            <p class="text-gray-600 text-sm mt-3 line-clamp-2">${clinic.description}</p>
          `
                  : ""
          }
          <div class="mt-4">
            <span class="text-blue-600 font-semibold text-sm">View Details â†’</span>
          </div>
        </div>
      </a>
    `,
            )
            .join("");
    }

    // Load clinics on page load
    loadClinics();

    // Add event listeners for filters
    document
        .getElementById("searchQuery")
        ?.addEventListener("input", loadClinics);
    document
        .getElementById("cityFilter")
        ?.addEventListener("input", loadClinics);
    document
        .getElementById("specialtyFilter")
        ?.addEventListener("change", loadClinics);
</script>
