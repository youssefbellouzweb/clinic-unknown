---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Appointments - ClinicHub">
    <div class="min-h-screen flex">
        <aside class="w-64 bg-gray-900 text-white flex flex-col">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-2xl font-bold">ClinicHub</h2>
                <a
                    href="/dashboard"
                    class="text-sm text-gray-400 mt-1 hover:text-white"
                    >Back to Dashboard</a
                >
            </div>
            <nav class="flex-1 p-4">
                <a
                    href="/dashboard/appointments"
                    class="flex items-center gap-3 px-4 py-3 rounded-lg bg-blue-600 text-white mb-2"
                >
                    Appointments
                </a>
            </nav>
        </aside>

        <main class="flex-1 bg-gray-50 p-8">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold">Appointments</h1>
                <button
                    id="addAppointmentBtn"
                    class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700"
                >
                    New Appointment
                </button>
            </div>

            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div id="appointmentsList" class="p-6">
                    <p class="text-gray-500">Loading appointments...</p>
                </div>
            </div>
        </main>
    </div>

    <!-- Add Appointment Modal -->
    <div
        id="addAppointmentModal"
        class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center"
    >
        <div class="bg-white rounded-xl p-8 max-w-md w-full">
            <h2 class="text-2xl font-bold mb-4">New Appointment</h2>
            <form id="addAppointmentForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Patient ID</label
                    >
                    <input
                        type="number"
                        name="patientId"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Date</label
                    >
                    <input
                        type="date"
                        name="date"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Time</label
                    >
                    <input
                        type="time"
                        name="time"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Notes</label
                    >
                    <textarea
                        name="notes"
                        class="w-full border rounded-lg px-3 py-2"></textarea>
                </div>
                <div class="flex justify-end gap-3 mt-6">
                    <button
                        type="button"
                        id="cancelBtn"
                        class="text-gray-600 hover:text-gray-800">Cancel</button
                    >
                    <button
                        type="submit"
                        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700"
                        >Save</button
                    >
                </div>
            </form>
        </div>
    </div>
</Layout>

<script>
    import { appointments } from "../../lib/services";

    const list = document.getElementById("appointmentsList");
    const modal = document.getElementById("addAppointmentModal");
    const form = document.getElementById(
        "addAppointmentForm",
    ) as HTMLFormElement;

    async function loadAppointments() {
        try {
            const response = await appointments.getAll();
            const data = response.data;

            if (data.length === 0) {
                list!.innerHTML =
                    '<p class="text-gray-500">No appointments found.</p>';
                return;
            }

            list!.innerHTML = `
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Patient</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        ${data
                            .map(
                                (a: any) => `
                            <tr>
                                <td class="px-6 py-4">${a.patient_name}</td>
                                <td class="px-6 py-4">${a.date}</td>
                                <td class="px-6 py-4">${a.time}</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">${a.status}</span>
                                </td>
                                <td class="px-6 py-4">
                                    <button class="text-red-600 hover:text-red-800" onclick="window.cancelAppointment(${a.id})">Cancel</button>
                                </td>
                            </tr>
                        `,
                            )
                            .join("")}
                    </tbody>
                </table>
            `;
        } catch (error) {
            console.error("Error loading appointments:", error);
            list!.innerHTML =
                '<p class="text-red-500">Failed to load appointments.</p>';
        }
    }

    // Expose cancel function to window
    (window as any).cancelAppointment = async (id: number) => {
        if (!confirm("Are you sure you want to cancel this appointment?"))
            return;
        try {
            await appointments.cancel(id);
            loadAppointments();
        } catch (error) {
            alert("Failed to cancel appointment");
        }
    };

    document
        .getElementById("addAppointmentBtn")
        ?.addEventListener("click", () => {
            modal?.classList.remove("hidden");
            modal?.classList.add("flex");
        });

    document.getElementById("cancelBtn")?.addEventListener("click", () => {
        modal?.classList.add("hidden");
        modal?.classList.remove("flex");
    });

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        // Combine date and time to datetime if backend expects it,
        // but backend createAppointmentSchema expects date and time separately in my previous update?
        // Let's check validators.js.
        // createAppointmentSchema: date (YYYY-MM-DD), time (HH:MM).
        // So we can send as is.

        const data = {
            patient_id: parseInt(formData.get("patientId") as string),
            date: formData.get("date") as string,
            time: formData.get("time") as string,
            notes: formData.get("notes") as string,
        };

        try {
            await appointments.create(data);
            modal?.classList.add("hidden");
            modal?.classList.remove("flex");
            form.reset();
            loadAppointments();
        } catch (error) {
            alert("Failed to create appointment");
            console.error(error);
        }
    });

    loadAppointments();
</script>
