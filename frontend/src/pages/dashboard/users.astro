---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Users - ClinicHub">
    <div class="min-h-screen flex">
        <aside class="w-64 bg-gray-900 text-white flex flex-col">
            <div class="p-6 border-b border-gray-800">
                <h2 class="text-2xl font-bold">ClinicHub</h2>
                <a
                    href="/dashboard"
                    class="text-sm text-gray-400 mt-1 hover:text-white"
                    >Back to Dashboard</a
                >
            </div>
            <nav class="flex-1 p-4">
                <a
                    href="/dashboard/users"
                    class="flex items-center gap-3 px-4 py-3 rounded-lg bg-blue-600 text-white mb-2"
                >
                    Users
                </a>
            </nav>
        </aside>

        <main class="flex-1 bg-gray-50 p-8">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold">Staff Members</h1>
                <button
                    id="addUserBtn"
                    class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700"
                >
                    Add Staff
                </button>
            </div>

            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div id="usersList" class="p-6">
                    <p class="text-gray-500">Loading users...</p>
                </div>
            </div>
        </main>
    </div>

    <!-- Add User Modal -->
    <div
        id="addUserModal"
        class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center"
    >
        <div class="bg-white rounded-xl p-8 max-w-md w-full">
            <h2 class="text-2xl font-bold mb-4">Add Staff Member</h2>
            <form id="addUserForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Name</label
                    >
                    <input
                        type="text"
                        name="name"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Email</label
                    >
                    <input
                        type="email"
                        name="email"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Role</label
                    >
                    <select
                        name="role"
                        required
                        class="w-full border rounded-lg px-3 py-2"
                    >
                        <option value="doctor">Doctor</option>
                        <option value="nurse">Nurse</option>
                        <option value="reception">Receptionist</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Password</label
                    >
                    <input
                        type="password"
                        name="password"
                        required
                        minlength="8"
                        class="w-full border rounded-lg px-3 py-2"
                    />
                </div>
                <div class="flex justify-end gap-3 mt-6">
                    <button
                        type="button"
                        id="cancelBtn"
                        class="text-gray-600 hover:text-gray-800">Cancel</button
                    >
                    <button
                        type="submit"
                        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700"
                        >Save</button
                    >
                </div>
            </form>
        </div>
    </div>
</Layout>

<script>
    import { users } from "../../lib/services";

    const list = document.getElementById("usersList");
    const modal = document.getElementById("addUserModal");
    const form = document.getElementById("addUserForm") as HTMLFormElement;

    async function loadUsers() {
        try {
            const response = await users.getAll();
            const data = response.data;

            if (data.length === 0) {
                list!.innerHTML =
                    '<p class="text-gray-500">No users found.</p>';
                return;
            }

            list!.innerHTML = `
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        ${data
                            .map(
                                (u: any) => `
                            <tr>
                                <td class="px-6 py-4">${u.name}</td>
                                <td class="px-6 py-4">${u.email}</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">${u.role}</span>
                                </td>
                                <td class="px-6 py-4">
                                    <button class="text-red-600 hover:text-red-800" onclick="window.deleteUser(${u.id})">Delete</button>
                                </td>
                            </tr>
                        `,
                            )
                            .join("")}
                    </tbody>
                </table>
            `;
        } catch (error) {
            console.error("Error loading users:", error);
            list!.innerHTML =
                '<p class="text-red-500">Failed to load users.</p>';
        }
    }

    (window as any).deleteUser = async (id: number) => {
        if (!confirm("Are you sure you want to delete this user?")) return;
        try {
            await users.delete(id);
            loadUsers();
        } catch (error) {
            alert("Failed to delete user");
        }
    };

    document.getElementById("addUserBtn")?.addEventListener("click", () => {
        modal?.classList.remove("hidden");
        modal?.classList.add("flex");
    });

    document.getElementById("cancelBtn")?.addEventListener("click", () => {
        modal?.classList.add("hidden");
        modal?.classList.remove("flex");
    });

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);

        try {
            await users.create(data);
            modal?.classList.add("hidden");
            modal?.classList.remove("flex");
            form.reset();
            loadUsers();
        } catch (error) {
            alert("Failed to create user");
        }
    });

    loadUsers();
</script>
