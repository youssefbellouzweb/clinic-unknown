---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/layout/Navbar";
import Footer from "../components/layout/Footer";
import {
	Building2,
	Calendar,
	Users,
	Shield,
	ArrowRight,
	CheckCircle2,
	Star,
} from "lucide-react";
import Button from "../components/ui/Button";
import Card from "../components/ui/Card";
import Badge from "../components/ui/Badge";
---

<Layout title="ClinicHub - Modern Clinic Management">
	<div class="min-h-screen flex flex-col">
		<Navbar client:load />

		<main class="flex-1">
			<!-- Hero Section -->
			<section
				class="relative overflow-hidden pt-32 pb-20 lg:pt-40 lg:pb-32"
			>
				<!-- Animated Background -->
				<div class="absolute inset-0 z-0">
					<div
						class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-purple-50"
					>
					</div>
					<div
						class="absolute top-0 right-0 w-[800px] h-[800px] bg-blue-400/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 animate-pulse-slow"
					>
					</div>
					<div
						class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-purple-400/10 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 animate-pulse-slow"
						style="animation-delay: 1s;"
					>
					</div>
				</div>

				<div class="container-custom relative z-10">
					<div
						class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20"
					>
						<div
							class="flex-1 text-center lg:text-left animate-slide-up"
						>
							<Badge
								variant="primary"
								size="lg"
								className="mb-6 animate-fade-in"
							>
								<span class="mr-2">âœ¨</span> New v2.0 Released
							</Badge>

							<h1
								class="text-5xl lg:text-7xl font-bold mb-6 leading-tight tracking-tight"
							>
								Modern Healthcare <br />
								<span class="text-gradient"
									>Management Simplified</span
								>
							</h1>

							<p
								class="text-xl text-gray-600 mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0"
							>
								Streamline your practice with our intelligent
								platform. Manage patients, appointments, and
								staff with a beautiful, intuitive interface
								designed for modern clinics.
							</p>

							<div
								class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4"
							>
								<a href="/register">
									<Button
										size="xl"
										variant="gradient"
										icon={ArrowRight}
										iconPosition="right"
										className="w-full sm:w-auto shadow-colored-lg"
									>
										Get Started Free
									</Button>
								</a>
								<a href="/clinics">
									<Button
										size="xl"
										variant="outline"
										className="w-full sm:w-auto"
									>
										Browse Clinics
									</Button>
								</a>
							</div>

							<div
								class="mt-10 flex items-center justify-center lg:justify-start gap-8 text-gray-500 text-sm font-medium"
							>
								<div class="flex items-center gap-2">
									<CheckCircle2
										size={18}
										className="text-green-500"
									/>
									<span>No credit card required</span>
								</div>
								<div class="flex items-center gap-2">
									<CheckCircle2
										size={18}
										className="text-green-500"
									/>
									<span>14-day free trial</span>
								</div>
							</div>
						</div>

						<div
							class="flex-1 w-full max-w-xl lg:max-w-none animate-slide-left"
							style="animation-delay: 0.2s;"
						>
							<div class="relative">
								<div
									class="absolute inset-0 bg-gradient-to-tr from-blue-600 to-purple-600 rounded-2xl blur-2xl opacity-20 transform rotate-3 scale-105"
								>
								</div>
								<div
									class="relative bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden glass"
								>
									<img
										src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
										alt="Dashboard Preview"
										class="w-full h-auto rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-700"
										loading="lazy"
									/>

									<!-- Floating Cards -->
									<div
										class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-xl border border-gray-100 animate-bounce"
										style="animation-duration: 3s;"
									>
										<div class="flex items-center gap-3">
											<div
												class="bg-green-100 p-2 rounded-lg"
											>
												<Users
													class="text-green-600"
													size={20}
												/>
											</div>
											<div>
												<p
													class="text-xs text-gray-500"
												>
													Total Patients
												</p>
												<p
													class="text-lg font-bold text-gray-900"
												>
													1,248
												</p>
											</div>
										</div>
									</div>

									<div
										class="absolute -top-6 -right-6 bg-white p-4 rounded-xl shadow-xl border border-gray-100 animate-bounce"
										style="animation-duration: 4s;"
									>
										<div class="flex items-center gap-3">
											<div
												class="bg-blue-100 p-2 rounded-lg"
											>
												<Calendar
													class="text-blue-600"
													size={20}
												/>
											</div>
											<div>
												<p
													class="text-xs text-gray-500"
												>
													Appointments
												</p>
												<p
													class="text-lg font-bold text-gray-900"
												>
													24 Today
												</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Features Section -->
			<section class="py-24 bg-white relative">
				<div class="container-custom">
					<div class="text-center mb-16 max-w-3xl mx-auto">
						<Badge variant="primary" className="mb-4"
							>Features</Badge
						>
						<h2 class="text-4xl lg:text-5xl font-bold mb-6">
							Everything You Need to <br />
							<span class="text-gradient-secondary"
								>Run Your Clinic</span
							>
						</h2>
						<p class="text-xl text-gray-600">
							Powerful features designed for modern healthcare
							practices. Focus on patient care while we handle the
							administration.
						</p>
					</div>

					<div
						class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 stagger-children"
					>
						<Card
							className="p-8 hover-lift border-t-4 border-t-blue-500 group"
						>
							<div
								class="bg-blue-50 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300"
							>
								<Users className="text-blue-600" size={32} />
							</div>
							<h3
								class="text-xl font-bold mb-3 group-hover:text-blue-600 transition-colors"
							>
								Patient Management
							</h3>
							<p class="text-gray-600 leading-relaxed">
								Comprehensive patient records, medical history,
								and easy access to all patient information in
								one secure place.
							</p>
						</Card>

						<Card
							className="p-8 hover-lift border-t-4 border-t-green-500 group"
						>
							<div
								class="bg-green-50 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300"
							>
								<Calendar
									className="text-green-600"
									size={32}
								/>
							</div>
							<h3
								class="text-xl font-bold mb-3 group-hover:text-green-600 transition-colors"
							>
								Smart Scheduling
							</h3>
							<p class="text-gray-600 leading-relaxed">
								Intelligent appointment system with automated
								reminders, drag-and-drop rescheduling, and
								calendar sync.
							</p>
						</Card>

						<Card
							className="p-8 hover-lift border-t-4 border-t-purple-500 group"
						>
							<div
								class="bg-purple-50 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300"
							>
								<Shield className="text-purple-600" size={32} />
							</div>
							<h3
								class="text-xl font-bold mb-3 group-hover:text-purple-600 transition-colors"
							>
								Secure Access
							</h3>
							<p class="text-gray-600 leading-relaxed">
								Role-based access control (RBAC) ensures data
								security for doctors, nurses, and administrative
								staff.
							</p>
						</Card>

						<Card
							className="p-8 hover-lift border-t-4 border-t-orange-500 group"
						>
							<div
								class="bg-orange-50 w-16 h-16 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300"
							>
								<Building2
									className="text-orange-600"
									size={32}
								/>
							</div>
							<h3
								class="text-xl font-bold mb-3 group-hover:text-orange-600 transition-colors"
							>
								Multi-Clinic Support
							</h3>
							<p class="text-gray-600 leading-relaxed">
								Seamlessly manage multiple clinic locations and
								branches from a single unified dashboard.
							</p>
						</Card>
					</div>
				</div>
			</section>

			<!-- Testimonials Section -->
			<section class="py-24 bg-gray-50 relative overflow-hidden">
				<div
					class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent"
				>
				</div>

				<div class="container-custom">
					<div class="text-center mb-16">
						<Badge variant="warning" className="mb-4"
							>Testimonials</Badge
						>
						<h2 class="text-4xl font-bold mb-6">
							Trusted by Healthcare Professionals
						</h2>
					</div>

					<div class="grid md:grid-cols-3 gap-8">
						<Card className="p-8 relative">
							<div class="flex gap-1 mb-4 text-yellow-400">
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
							</div>
							<p class="text-gray-600 mb-6 italic">
								"ClinicHub has completely transformed how we
								manage our practice. The patient scheduling is
								effortless and the interface is beautiful."
							</p>
							<div class="flex items-center gap-4">
								<img
									src="https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=100&h=100&q=80"
									alt="Dr. Sarah"
									class="w-12 h-12 rounded-full object-cover"
								/>
								<div>
									<p class="font-bold text-gray-900">
										Dr. Sarah Wilson
									</p>
									<p class="text-sm text-gray-500">
										Cardiologist
									</p>
								</div>
							</div>
						</Card>

						<Card className="p-8 relative mt-8 md:mt-0">
							<div class="flex gap-1 mb-4 text-yellow-400">
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
							</div>
							<p class="text-gray-600 mb-6 italic">
								"The best clinic management software we've used.
								It's intuitive, fast, and the support team is
								incredible. Highly recommended!"
							</p>
							<div class="flex items-center gap-4">
								<img
									src="https://images.unsplash.com/photo-1612349317150-e413f6a5b16d?auto=format&fit=crop&w=100&h=100&q=80"
									alt="Dr. Michael"
									class="w-12 h-12 rounded-full object-cover"
								/>
								<div>
									<p class="font-bold text-gray-900">
										Dr. Michael Chen
									</p>
									<p class="text-sm text-gray-500">
										Pediatrician
									</p>
								</div>
							</div>
						</Card>

						<Card className="p-8 relative mt-8 md:mt-0">
							<div class="flex gap-1 mb-4 text-yellow-400">
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
								<Star fill="currentColor" size={20} />
							</div>
							<p class="text-gray-600 mb-6 italic">
								"Managing multiple clinic locations used to be a
								nightmare. ClinicHub made it simple and
								centralized. A game changer."
							</p>
							<div class="flex items-center gap-4">
								<img
									src="https://images.unsplash.com/photo-1594824476967-48c8b964273f?auto=format&fit=crop&w=100&h=100&q=80"
									alt="Dr. Emily"
									class="w-12 h-12 rounded-full object-cover"
								/>
								<div>
									<p class="font-bold text-gray-900">
										Dr. Emily Rodriguez
									</p>
									<p class="text-sm text-gray-500">
										Dermatologist
									</p>
								</div>
							</div>
						</Card>
					</div>
				</div>
			</section>
			<!-- CTA Section -->
			<section class="py-24 relative overflow-hidden">
				<div class="absolute inset-0 bg-blue-600">
					<div
						class="absolute inset-0 bg-gradient-to-br from-blue-600 to-indigo-900 opacity-90"
					>
					</div>
					<div
						class="absolute top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"
					>
					</div>
				</div>

				<div class="container-custom relative z-10 text-center">
					<h2 class="text-4xl lg:text-5xl font-bold mb-8 text-white">
						Ready to Transform Your Clinic?
					</h2>
					<p class="text-xl mb-10 text-blue-100 max-w-2xl mx-auto">
						Join hundreds of modern clinics already using ClinicHub
						to streamline their operations and improve patient care.
					</p>
					<div
						class="flex flex-col sm:flex-row items-center justify-center gap-4"
					>
						<a href="/register">
							<Button
								size="xl"
								className="bg-white text-blue-600 hover:bg-blue-50 border-none shadow-xl w-full sm:w-auto"
							>
								Start Your Free Trial
								<ArrowRight size={20} className="ml-2" />
							</Button>
						</a>
						<a href="/contact">
							<Button
								size="xl"
								variant="outline"
								className="border-white text-white hover:bg-white/10 w-full sm:w-auto"
							>
								Contact Sales
							</Button>
						</a>
					</div>
				</div>
			</section>
		</main>

		<Footer client:load />
	</div>
</Layout>
