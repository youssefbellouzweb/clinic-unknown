---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/layout/Navbar";
import Footer from "../components/layout/Footer";
---

<Layout title="Register Your Clinic - ClinicHub">
    <div class="min-h-screen flex flex-col">
        <Navbar client:load />

        <main class="flex-1 flex items-center justify-center py-12 px-4">
            <div class="max-w-2xl w-full">
                <div class="bg-white rounded-2xl shadow-xl p-8">
                    <div class="text-center mb-8">
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">
                            Register Your Clinic
                        </h1>
                        <p class="text-gray-600">
                            Start managing your clinic today
                        </p>
                    </div>

                    <form id="registerForm" class="space-y-6">
                        <div
                            id="errorAlert"
                            class="hidden bg-red-50 border border-red-200 text-red-800 rounded-lg p-4"
                        >
                            <p id="errorMessage"></p>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                >
                                    Clinic Name *
                                </label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="City Health Clinic"
                                />
                            </div>

                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                >
                                    Email Address *
                                </label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="admin@clinic.com"
                                />
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="city"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                >
                                    City
                                </label>
                                <input
                                    type="text"
                                    id="city"
                                    name="city"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="New York"
                                />
                            </div>

                            <div>
                                <label
                                    for="specialty"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                >
                                    Specialty
                                </label>
                                <select
                                    id="specialty"
                                    name="specialty"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                >
                                    <option value="">Select specialty</option>
                                    <option value="General Practice"
                                        >General Practice</option
                                    >
                                    <option value="Dentistry">Dentistry</option>
                                    <option value="Pediatrics"
                                        >Pediatrics</option
                                    >
                                    <option value="Cardiology"
                                        >Cardiology</option
                                    >
                                    <option value="Dermatology"
                                        >Dermatology</option
                                    >
                                    <option value="Orthopedics"
                                        >Orthopedics</option
                                    >
                                </select>
                            </div>
                        </div>

                        <div>
                            <label
                                for="password"
                                class="block text-sm font-medium text-gray-700 mb-1"
                            >
                                Password *
                            </label>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                required
                                minlength="6"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Minimum 6 characters"
                            />
                        </div>

                        <button
                            type="submit"
                            class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                        >
                            Create Clinic Account
                        </button>
                    </form>

                    <div class="mt-6 text-center">
                        <p class="text-gray-600">
                            Already have an account?
                            <a
                                href="/login"
                                class="text-blue-600 hover:text-blue-700 font-semibold"
                            >
                                Sign in
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </main>

        <Footer client:load />
    </div>
</Layout>

<script>
    import { auth } from "../lib/services";

    const form = document.getElementById("registerForm") as HTMLFormElement;
    const errorAlert = document.getElementById("errorAlert") as HTMLDivElement;
    const errorMessage = document.getElementById(
        "errorMessage",
    ) as HTMLParagraphElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);

        // Construct payload matching backend schema
        const data = {
            clinic: {
                name: formData.get("name") as string,
                email: formData.get("email") as string,
                phone: "0000000000", // Placeholder as form doesn't have phone yet
                address: formData.get("city") as string, // Using city as address for now
            },
            owner: {
                name: "Admin", // Placeholder as form doesn't have owner name yet
                email: formData.get("email") as string,
                password: formData.get("password") as string,
            },
        };

        // Note: Ideally we should update the form to include phone, address, and owner name
        // For MVP, we'll add these fields to the form in the next step

        try {
            errorAlert.classList.add("hidden");

            await auth.registerClinic(data);

            // Redirect to login (since auto-login might not happen or we want them to verify)
            // Or redirect to dashboard if backend returns token (it currently doesn't for registerClinic)
            window.location.href = "/login";
        } catch (error: any) {
            errorAlert.classList.remove("hidden");
            errorMessage.textContent =
                error.response?.data?.error ||
                "Registration failed. Please try again.";
        }
    });
</script>
